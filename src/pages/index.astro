---
import Layout from '../layouts/Layout.astro';
import { websites } from '../data/websites';

const categories = [...new Set(websites.map(w => w.category))];
---

<Layout title="Portfolio | Proyectos Web">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative py-32 px-6 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-neutral-900 via-neutral-950 to-black"></div>
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative max-w-6xl mx-auto text-center">
        <img src="/logo.webp" alt="Logo" class="w-24 h-24 mx-auto mb-6 rounded-xl invert opacity-90" />
        <p class="text-blue-400 font-medium mb-4 tracking-wider uppercase text-sm">Portfolio de Proyectos</p>
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-400 via-pink-400 to-cyan-400 animate-pulse drop-shadow-[0_0_30px_rgba(168,85,247,0.4)]">
          Aitor Velasco
        </h1>
        <p class="text-xl text-neutral-400 max-w-2xl mx-auto leading-relaxed">
          Una colección de proyectos web modernos, desde e-commerce hasta SaaS, 
          cada uno diseñado con atención al detalle y experiencia de usuario.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4 mt-12">
          <a href="#proyectos" class="px-8 py-3 bg-white text-neutral-900 rounded-full font-medium hover:bg-neutral-200 transition-colors">
            Ver Proyectos
          </a>
          <a href="#contacto" class="px-8 py-3 border border-neutral-700 text-white rounded-full font-medium hover:bg-neutral-800 transition-colors">
            Contactar
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="sobre-mi" class="py-32 px-6 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black via-neutral-950 to-neutral-900"></div>
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-neutral-800 to-transparent"></div>
      
      <div class="relative max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
          <!-- Photo & Title -->
          <div class="lg:col-span-4 fade-in-left">
            <div class="relative mb-8">
              <div class="w-48 h-48 mx-auto lg:mx-0 rounded-2xl overflow-hidden border-2 border-neutral-800 shadow-2xl shadow-blue-500/10">
                <img 
                  src="/foto.webp" 
                  alt="Aitor Velasco" 
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="absolute -bottom-4 -right-4 lg:right-auto lg:-left-4 w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
            </div>
            <p class="text-blue-400 font-medium mb-4 tracking-wider uppercase text-sm">Sobre mí</p>
            <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight">
              Pasión por crear<br/>
              <span class="text-neutral-500">experiencias web</span>
            </h2>
            <div class="mt-8 w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
          </div>

          <!-- Content -->
          <div class="lg:col-span-8 space-y-8">
            <p class="text-xl text-neutral-300 leading-relaxed fade-in-right" style="animation-delay: 100ms;">
              Soy un profesional apasionado por el desarrollo y diseño web, con más de 10 años de experiencia en la creación, mantenimiento y optimización de plataformas digitales de alto rendimiento para marcas reconocidas.
            </p>

            <!-- Formación -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 fade-in-right" style="animation-delay: 200ms;">
              <div class="flex items-start gap-4 p-4 bg-neutral-900/50 rounded-xl border border-neutral-800">
                <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-medium">Ingeniería Informática</h4>
                  <p class="text-neutral-500 text-sm">Universidad Rey Juan Carlos</p>
                </div>
              </div>
              <div class="flex items-start gap-4 p-4 bg-neutral-900/50 rounded-xl border border-neutral-800">
                <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-medium">Máster en Desarrollo Web</h4>
                  <p class="text-neutral-500 text-sm">Escuela CICE</p>
                </div>
              </div>
            </div>

            <!-- Experiencia Timeline -->
            <div class="space-y-6 fade-in-right" style="animation-delay: 300ms;">
              <div class="relative pl-8 border-l border-neutral-800">
                <div class="absolute -left-1.5 top-0 w-3 h-3 rounded-full bg-blue-500"></div>
                <div class="mb-1">
                  <span class="text-blue-400 text-sm font-medium">MASORANGE</span>
                </div>
                <h4 class="text-white font-semibold text-lg">Senior FrontEnd Developer</h4>
                <p class="text-neutral-400 text-sm mb-2">IT Departament</p>
                <p class="text-neutral-500 text-sm">Responsable de las áreas públicas de MASMOVIL, Yoigo, Jazztel, llamaya, Euskaltel, Guuk, R, Racctel+, Telecable y Lebara.</p>
              </div>

              <div class="relative pl-8 border-l border-neutral-800">
                <div class="absolute -left-1.5 top-0 w-3 h-3 rounded-full bg-purple-500"></div>
                <div class="mb-1">
                  <span class="text-purple-400 text-sm font-medium">Grupo MASMOVIL</span>
                </div>
                <h4 class="text-white font-semibold text-lg">Senior FrontEnd Developer</h4>
                <p class="text-neutral-400 text-sm mb-2">IT Departament</p>
                <p class="text-neutral-500 text-sm">Liderando proyectos estratégicos y mejorando la experiencia de usuario en plataformas digitales.</p>
              </div>

              <div class="relative pl-8 border-l border-neutral-800">
                <div class="absolute -left-1.5 top-0 w-3 h-3 rounded-full bg-neutral-600"></div>
                <div class="mb-1">
                  <span class="text-neutral-400 text-sm font-medium">BQ</span>
                </div>
                <h4 class="text-white font-semibold text-lg">FrontEnd Developer</h4>
                <p class="text-neutral-400 text-sm mb-2">E-business Department</p>
                <p class="text-neutral-500 text-sm">Desarrollo y mantenimiento de tienda online, DIWO, Blog BQ y web principal.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="py-16 px-6 border-y border-neutral-800">
        <div class="max-w-4xl mx-auto grid grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-white mb-2" data-target={websites.length}>0</div>
          <div class="text-neutral-400">Proyectos</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-2" data-target="10" data-suffix="+">0</div>
          <div class="text-neutral-400">Años Experiencia</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-2" data-target={categories.length}>0</div>
          <div class="text-neutral-400">Categorías</div>
        </div>
      </div>
    </section>

    <!-- Projects Grid -->
    <section id="proyectos" class="py-24 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Proyectos Destacados</h2>
          <p class="text-neutral-400 max-w-xl mx-auto">Cada proyecto representa un desafío único resuelto con creatividad y tecnología.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {websites.map((website, index) => (
            <article 
              class="group relative bg-neutral-900 rounded-2xl overflow-hidden border border-neutral-800 hover:border-neutral-700 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10"
              style={`animation-delay: ${index * 100}ms`}
            >
              <!-- Image -->
              <div class="relative aspect-[16/10] overflow-hidden">
                <img 
                  src={website.image} 
                  alt={website.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div class={`absolute inset-0 bg-gradient-to-t ${website.color} opacity-0 group-hover:opacity-20 transition-opacity duration-300`}></div>
                <div class="absolute top-4 right-4">
                  <span class="px-3 py-1 bg-neutral-900/80 backdrop-blur-sm rounded-full text-xs font-medium text-white">
                    {website.year}
                  </span>
                </div>
              </div>

              <!-- Content -->
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-2 py-1 bg-neutral-800 rounded text-xs text-neutral-400">
                    {website.category}
                  </span>
                </div>
                
                <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-blue-400 transition-colors">
                  {website.title}
                </h3>
                
                <p class="text-neutral-400 text-sm mb-4 line-clamp-2">
                  {website.description}
                </p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {website.tags.map(tag => (
                    <span class="px-2 py-1 bg-neutral-800/50 rounded text-xs text-neutral-500">
                      {tag}
                    </span>
                  ))}
                </div>

                <!-- CTA -->
                <a 
                  href={`/proyecto/${website.id}`}
                  class="inline-flex items-center gap-2 text-sm font-medium text-white group/btn"
                >
                  Ver detalles
                  <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section id="contacto" class="py-24 px-6 bg-gradient-to-b from-neutral-900 to-black">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">¿Interesado en trabajar juntos?</h2>
        <p class="text-xl text-neutral-400 mb-8">
          Siempre estoy abierto a discutir nuevos proyectos, ideas y oportunidades.
        </p>
        <a 
          href="mailto:aitorvelascodev@gmail.com"
          class="inline-flex items-center gap-2 px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Enviar mensaje
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 border-t border-neutral-800">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-neutral-500 text-sm">© 2026 Aitor Velasco. Made it with ❤️</p>
        <div class="flex gap-6">
          <a href="https://github.com/aitorvelasco" target="_blank" class="text-neutral-500 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://www.linkedin.com/in/aitor-velasco-ovejero-91a0094b" target="_blank" class="text-neutral-500 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </footer>
  </main>

  <script>
    const fadeObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          fadeObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    document.querySelectorAll('.fade-in-left, .fade-in-right').forEach(el => fadeObserver.observe(el));

    const counterObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const el = entry.target as HTMLElement;
          const target = parseInt(el.dataset.target || '0');
          const suffix = el.dataset.suffix || '';
          let current = 0;
          const increment = target / 40;
          const timer = setInterval(() => {
            current += increment;
            if (current >= target) {
              el.textContent = target + suffix;
              clearInterval(timer);
            } else {
              el.textContent = Math.floor(current) + suffix;
            }
          }, 30);
          counterObserver.unobserve(el);
        }
      });
    }, { threshold: 0.5 });

    document.querySelectorAll('[data-target]').forEach(el => counterObserver.observe(el));
  </script>

<style>
  .fade-in-left, .fade-in-right {
    opacity: 0;
    transform: translateX(-30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .fade-in-right {
    transform: translateX(30px);
  }
  
  .fade-in-left.visible, .fade-in-right.visible {
    opacity: 1;
    transform: translateX(0);
  }
</style>
</Layout>
